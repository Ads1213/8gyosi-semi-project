<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.kh.eightgyosi.email.model.mapper.EmailMapper">

	<!-- author : dasol -->
	
	<!-- 인증번호 수정 -->
	<update id="updateAuthKey">
		UPDATE EMAIL_AUTH_KEY
		SET AUTH_KEY = #{authKey},
		CREATE_TIME = SYSDATE
		WHERE EMAIL = #{email}
	</update>
	
	<!-- 인증번호 새로 삽입 -->
	<insert id="insertAuthKey">
		INSERT INTO EMAIL_AUTH_KEY
		VALUES(SEQ_KEY_NO.NEXTVAL, #{email}, #{authKey}, DEFAULT)
	</insert>
	
	<!-- 이메일 + 인증번호 일치하는 행 조회 -->
	<select id="checkAuthKey" resultType="_int">
		SELECT COUNT(*)
		FROM EMAIL_AUTH_KEY
		WHERE AUTH_KEY = #{authKey}
	</select>
	
</mapper>
